#!/bin/sh

die () {
   echo "*** mkconfig: $*" 1>&2
   exit 1
}

[ -f makefile ] || die "can not find 'makefile'"

cat<<EOF
/**********************************************************/
/* Automatically generated by './mkconfig': do note edit! */
/**********************************************************/
EOF

echo "#define LGL_OS \"`uname -srmn`\""
echo "#define LGL_COMPILED \"`date`\""
cat<<EOF
#define LGL_RELEASED "Mon Apr 29 23:59:16 CEST 2013"
#define LGL_VERSION "aqw"
#define LGL_ID "27d9fd46b7165001d2b9810598c94c5acf3cda9d"
EOF
